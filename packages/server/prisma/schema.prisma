generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// MODEL DEPARTAMENTO
model Departament {
  id           String    @id @default(uuid())
  dep_name     String
  dep_email    String    @unique
  dep_password String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  Course       Course[]
  Prof         Prof[]
  Subject      Subject[]

  @@map("departaments")
}

model Course {
  id            String      @id @default(uuid())
  cou_name      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  departamentId String
  departament   Departament @relation(fields: [departamentId], references: [id])
  Student       Student[]

  @@map("courses")
}

model Prof {
  id            String      @id @default(uuid())
  prof_name     String
  prof_status   Boolean
  prof_email    String      @unique
  prof_password String
  prof_phone    String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  departamentId String
  departament   Departament @relation(fields: [departamentId], references: [id])

  @@map("profs")
}

model Subject {
  id              String      @id @default(uuid())
  sub_name        String      @unique
  sub_shift       String
  sub_start_time  DateTime
  sub_stop_time   DateTime
  sub_description String
  sub_mandatory   Boolean
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  departamentId   String
  departament     Departament @relation(fields: [departamentId], references: [id])

  @@map("subjects")
}

model Student {
  id               String  @id @default(uuid())
  stu_name         String
  stu_registration String
  stu_course       String
  stu_status       Boolean
  stu_period       String
  stu_mother_name  String
  stu_father_name  String
  stu_phone        String
  stu_email        String  @unique
  stu_password     String

  courseId String
  course   Course @relation(fields: [courseId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

    @@map("students")
}
